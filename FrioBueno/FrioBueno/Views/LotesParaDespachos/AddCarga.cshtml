@model FrioBueno.Models.Carga

@{
    ViewData["Title"] = "Agregar Lote";
}

<h2>Agregar Lote para Despacho</h2>

<div class="row">
<div class="col-md-6 col-md-offset-3">
    <form asp-action="AddCarga">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Producto" class="control-label"></label>
            <input asp-for="Producto" class="form-control" readonly />
            <span asp-validation-for="Producto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TipoProducto" class="control-label"></label>
            <input asp-for="TipoProducto" class="form-control" readonly />
            <span asp-validation-for="TipoProducto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UnidadSoportante" class="control-label"></label>
            <input asp-for="UnidadSoportante" class="form-control" readonly />
            <span asp-validation-for="UnidadSoportante" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CantidadUS" class="control-label"></label>
            <input asp-for="CantidadUS" class="form-control" readonly />
            <span asp-validation-for="CantidadUS" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Envase" class="control-label"></label>
            <input asp-for="Envase" class="form-control" readonly />
            <span asp-validation-for="Envase" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="KgNeto" class="control-label"></label>
            <input asp-for="KgNeto" class="form-control" readonly />
            <span asp-validation-for="KgNeto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="IdCliente" type="hidden" class="form-control" readonly />
            <span asp-validation-for="IdCliente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Agregar" class="btn btn-default" />
        </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

